{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TradeEventJson",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "security": {
      "type": "string"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "settleDate": {
      "type": "string",
      "format": "date-time"
    },
    "action": {
      "type": "string"
    },
    "shares": {
      "type": "integer"
    },
    "price": {
      "type": "number"
    },
    "priceFx": {
      "$ref": "#/$defs/fx"
    },
    "outlay": {
      "type": "number"
    },
    "outlayFx": {
      "$ref": "#/$defs/fx"
    },
    "options": {
      "$ref": "#/$defs/option"
    },
    "raw": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "security",
    "date",
    "settleDate",
    "action",
    "shares",
    "price",
    "priceFx",
    "outlay",
    "outlayFx",
    "raw"
  ],

  "$defs": {
    "fx": {
      "title": "FxJson",
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        },
        "rate": {
          "type": "integer"
        }
      },
      "required": ["currency", "rate"]
    },

    "option": {
      "title": "OptionJson",
      "type": "object",
      "properties": {
        "strikeFx": {
          "$ref": "#/$defs/fx"
        },
        "type": {
          "type": "string"
        },
        "expiryDate": {
          "type": "string",
          "format": "date-time"
        },
        "strike": {
          "type": "integer"
        }
      },
      "required": ["strikeFx", "type", "expiryDate", "strike"]
    }
  }
}
